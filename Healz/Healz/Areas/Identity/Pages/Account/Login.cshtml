@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<!--************************************
                Home Banner Start
        *************************************-->

<div style="margin-bottom:50px;  " class="tg-pageinnerbanner tg-haslayout tg-parallaximg" data-appear-top-offset="600" data-parallax="scroll" data-image-src="/images/banner/img-02.jpg">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-xs-12">
                <div class="tg-pageheadcontent">
                    <div class="tg-pagetitle">
                        <h1>Login</h1>
                    </div>
                    <ol class="tg-breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li class="tg-active">Login</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</div>
<!--************************************
        Home Banner End
*************************************-->
<!--************************************
                Main Start
        *************************************-->

    <div style="margin-bottom:50px;" class="container">
        <div class="row">
            <div id="tg-twocolumns"  style="align-items:center;display:flex;justify-content:center;"class="tg-twocolumns">
                <div class="col-md-4 col-sm-5 col-xs-12">
                    <aside id="tg-sidebar" class="tg-sidebar">
                        <div class="tg-widget tg-widgetlogin">
                            <div class="tg-widgetcontent">
                                <div class="tg-widgettitle">
                                    <h3>Login Now</h3>
                                </div>
                                <form method="post" class="tg-themeform tg-formsignin">
                                    <fieldset>
                                        <div class="form-group">
                                            <label asp-for="LoginInput.Email"></label>
                                            <input asp-for="LoginInput.Email" class="form-control" />
                                            <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="LoginInput.Password"></label>
                                            <input asp-for="LoginInput.Password" class="form-control" />
                                            <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <div class="checkbox">
                                                <label asp-for="LoginInput.RememberMe">
                                                    <input asp-for="LoginInput.RememberMe" />
                                                    @Html.DisplayNameFor(m => m.LoginInput.RememberMe)
                                                </label>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="tg-btn tg-btn-lg">Log in</button>
                                        </div>
                                        <div class="form-group">
                                            <p>
                                                <a asp-page="./ForgotPassword">Forgot your password?</a>
                                            </p>
                                            <p>
                                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                                            </p>
                                        </div>
                                          
                                    </fieldset>
                                </form>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </div>

                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
